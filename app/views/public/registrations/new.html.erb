<div class="form-wrapper">

  <h1>新規登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-item">
      <%= f.label :ユーザー名 %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="form-item">
     <%= f.label :氏 %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="form-item">
     <%= f.label :名 %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="form-item">
       <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-item">
       <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-item">
       <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>


    <div class="button-panel">
     <%= f.submit "Sign in", class: "button" %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>

      <div class="form-footer">
      <p><a href="#"><%= render "public/shared/links" %></a></p>
      </div>
      <% end %>


</div>
