<div class="container px-5 px-sm-0">
<div class="row">
  <h2>検索機能</h2>

      <div class="col-md-8 offset-md-1">
      <h2>新着商品</h2>
        <table class="table table-hover table-inverse">

        <thead>
          <th></th>
          <th>商品名</th>
          <th>商品詳細</th>
        </thead>

        <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= image_tag product.get_image.variant(resize:'100x100') %></td>
          <td><%= link_to product.product_name, public_product_path(product.id) %></td>
          <td><%= link_to product.caption, public_product_path(product.id) %></td>
          <td><%= render "public/favorites/btn", product: product %></td>
        </tr>
        <% end %>
        </tbody>

      </table>
      </div>
  </div>
  </div>