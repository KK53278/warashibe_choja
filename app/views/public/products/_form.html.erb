<%= form_with model:@product, url: '/customers', method: :post do |f| %>

  <div class="form-group">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, class: 'form-control product_introduction' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>