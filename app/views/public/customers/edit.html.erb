<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>プロフィールを編集</h2>
  <%= form_with model: @customer, url: public_customer_path(@customer) do |f| %>
      <div class="form-group">
        <label for="inputName">ユーザー名</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%>
      </div>
      <div class="form-group">
        <label for="inputImage">ユーザー画像</label><br>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for="inputIntroduction">自己紹介</label><br>
        <%= f.text_field :introduction, autofocus: true, id:"inputText", placeholder:""%>
      </div>
        <input type="submit" name="commit" value="更新する" class="btn btn-secondary" data-disable-with="Update Customer">
  <% end %>
</div>