<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-3'>
      <h4>ユーザー情報</h4>
      <%= render 'info', customer: @customer %>

      <h4 class="mt-3">商品を投稿</h4>
      <%= render 'public/products/form', product: @product %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>出品中の商品</h2>
        <table class="table table-hover table-inverse">

        <thead>
          <th></th>
          <th>商品名</th>
          <th>商品詳細</th>
        </thead>

        <tbody>
        <% @products.each do |product| %>
        <tr>
          <td>
            <% if product.images.attached? %>
              <% product.images.each do |image| %>
                <%= image_tag image.variant(resize:'100x100') %>
              <% end %>
            <% else %>
              <%= image_tag 'no_image.jpg' %>
            <% end %>
          </td>
          <td><%= link_to product.product_name, public_product_path(product.id) %></td>
          <td><%= link_to product.caption, public_product_path(product.id) %></td>
        </tr>
        <% end %>
        </tbody>

        </table>
    </div>

  </div>
</div>