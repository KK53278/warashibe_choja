<% if product.favorited_by?(current_customer) %>
  <%= link_to public_favorite_path(product), method: :delete, remote: true do %><p class="text-danger">
  ♥<%= product.favorites.count %></p>
  <% end %>
<% else %>
  <%= link_to public_favorites_path(product), method: :post, remote: true do %>
  ♥<%= product.favorites.count %>
  <% end %>
<% end %>