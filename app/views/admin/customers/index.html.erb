<div class='container px-5 px-sm-0'>
  <div class='row'>

    <div class='col-md-8 offset-md-1'>

      <h2>会員一覧</h2>

      <table class="table table-hover table-inverse">

          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= image_tag customer.get_profile_image(60,60) %></td>
                <td><%= customer.name %></td>

                <td>
                </td>
              </tr>
            <% end %>
          </tbody>

      </table>

    </div>

  </div>
   <%= paginate @customers %>
</div>